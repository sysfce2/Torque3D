function TerrainEditor::init( %this )
{
   %this.attachTerrain();
   %this.setBrushSize( 9, 9 );

   new PersistenceManager( ETerrainPersistMan );
   
   ESettingsWindow.addEditorSettingsPage("TerrainEditor", "Terrain Editor");
}

